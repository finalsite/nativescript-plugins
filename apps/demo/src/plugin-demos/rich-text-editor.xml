<Page xmlns="http://schemas.nativescript.org/tns.xsd" xmlns:FS="@finalsite/rich-text-editor" navigatingTo="navigatingTo" class="page">
    <Page.actionBar>
        <ActionBar title="rich-text-editor" icon="" class="action-bar">
        </ActionBar>
    </Page.actionBar>
    <StackLayout>
        <Button text="Check HTML" tap="onTap" />
        <ScrollView class="h-full">
          <StackLayout>
            <FS:rich-text-editor width="100%" height="500" html="{{ editorContent }}" />
          </StackLayout>
        </ScrollView>
    </StackLayout>
</Page>
